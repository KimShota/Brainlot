{
  "expo": {
    "name": "Brainlot",
    "slug": "brainlot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "brainlot",
    "userInterfaceStyle": "automatic",
    "description": "Brainlot - AI-Powered Learning Platform. Transform your study materials into interactive MCQs. Upload PDFs and images to generate quizzes and learn on the go with TikTok-style swipeable flashcards.",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f8fdf9"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brainlot.app",
      "buildNumber": "10",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Brainlot to access your photo library to upload study materials",
        "NSCameraUsageDescription": "Allow Brainlot to access your camera to take pictures of study materials"
      },
      "associatedDomains": [
        "applinks:brainlot.app"
      ]
    },
    "android": {
      "package": "com.brainlot.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "backgroundColor": "#58cc02",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "brainlot.app"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "privacy": "public",
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#f8fdf9",
          "dark": {
            "image": "./assets/images/splash-icon.png",
            "backgroundColor": "#1a1f2e"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "owner": "shotacademic",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "52311a61-db0a-4f39-ae17-2475b0104c1d"
      }
    }
  }
}
